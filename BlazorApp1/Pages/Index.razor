    protected override void OnInitialized()
    {
        base.OnInitialized();
       
        StepsApp.Add(new TutorialStepModel() {
            Text = "Home page!",
            CssClass = "home",
            SnapToClass = "home"
        });
        StepsApp.Add(new TutorialStepModel() {
            Text = "It's a counter, only a counter...",
            CssClass = "counter",
            SnapToClass = "counter"
        });
        StepsApp.Add(new TutorialStepModel() {
            Text = "Get random data",
            CssClass = "fetch",
            SnapToClass = "fetch-data"
        });   
    }
}